.chat-side
  .header
    .header__name
      = current_user.name
    .header__list
      .header__list__new-group
        = link_to new_group_path do
          = fa_icon 'pencil-square-o icon', class: "icon"
      .header__list__edit-user
        = link_to edit_user_path(current_user) do
          = fa_icon 'cog icon', class: "icon"
  .groups
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group__name
            = group.name
          .group__message
            = group.show_last_message

