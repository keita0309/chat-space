= render "shared/side_bar"
.chat-main
  .main-header
    .main-header__left-box
      .main-header__left-box__group
        あ
      .main-header__left-box__member
        あ
    .main-header__edit-btn
      = link_to 'edit', '#', class: "btn"

  .messages
    .message
      .message__up
        .message__up__user
          あ
        .message__up__date
          1234
      .message__text
        あ
  
  .form
    .new-message
      .new-message__input-box
        .new-message__input-box__text
          あ
        .new-message__input-box__image
          %label
            = fa_icon 'image', class: 'icon-image'
            %input{name: "image", style: "display:none", type: "file"}/

      .new-message__send
        send
        %input{type: "submit", value: "send", style: "display:none"}/